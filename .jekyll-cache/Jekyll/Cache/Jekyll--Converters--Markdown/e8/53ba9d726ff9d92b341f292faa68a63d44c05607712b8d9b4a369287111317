          <span class="nt">&lt;br</span> <span class="nt">/&gt;</span>
          <span class="nt">&lt;input</span> <span class="na">type=</span><span class="s">"text"</span> <span class="na">name=</span><span class="s">"hobbies[2]"</span> <span class="na">id=</span><span class="s">"hobbies[2]"</span> <span class="na">value=</span><span class="s">"swim"</span> <span class="nt">/&gt;</span>
